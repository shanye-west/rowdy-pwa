rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Public read for all collections
    match /{document=**} {
      allow read: if true;
    }
    
    // Players collection: public read
    // Updates allowed for account setup (linking authUid)
    match /players/{playerId} {
      allow read: if true;
      // Allow update if:
      // 1. User is authenticated AND
      // 2. Either setting authUid for first time (account setup) OR already owns this doc
      allow update: if request.auth != null && (
        // Account setup: user can set authUid if not already set
        (resource.data.authUid == null && request.resource.data.authUid == request.auth.uid) ||
        // Already owns this doc
        resource.data.authUid == request.auth.uid
      );
      allow create, delete: if false;
    }
    
    // Matches: authenticated users who are rostered can update
    match /matches/{matchId} {
      // Get player IDs from the match roster
      function getTeamPlayerIds() {
        let teamA = resource.data.teamAPlayers;
        let teamB = resource.data.teamBPlayers;
        let ids = [];
        
        // Build list of player IDs from both teams
        return (teamA.size() > 0 ? [teamA[0].playerId] : [])
          .concat(teamA.size() > 1 ? [teamA[1].playerId] : [])
          .concat(teamB.size() > 0 ? [teamB[0].playerId] : [])
          .concat(teamB.size() > 1 ? [teamB[1].playerId] : []);
      }
      
      // Check if the authenticated user's linked player is in this match
      function isRosteredPlayer() {
        let playerIds = getTeamPlayerIds();
        
        // Check each player doc to see if their authUid matches the request
        return (playerIds.size() > 0 && exists(/databases/$(database)/documents/players/$(playerIds[0])) && 
                get(/databases/$(database)/documents/players/$(playerIds[0])).data.authUid == request.auth.uid) ||
               (playerIds.size() > 1 && exists(/databases/$(database)/documents/players/$(playerIds[1])) && 
                get(/databases/$(database)/documents/players/$(playerIds[1])).data.authUid == request.auth.uid) ||
               (playerIds.size() > 2 && exists(/databases/$(database)/documents/players/$(playerIds[2])) && 
                get(/databases/$(database)/documents/players/$(playerIds[2])).data.authUid == request.auth.uid) ||
               (playerIds.size() > 3 && exists(/databases/$(database)/documents/players/$(playerIds[3])) && 
                get(/databases/$(database)/documents/players/$(playerIds[3])).data.authUid == request.auth.uid);
      }

      // New: allow public edits if the tournament explicitly enables openPublicEdits
      function isTournamentOpen() {
        // Determine tournamentId from existing resource or incoming request without using 'if/else'
        let tid = resource.data.tournamentId != null ? resource.data.tournamentId : (request.resource != null && request.resource.data.tournamentId != null ? request.resource.data.tournamentId : null);
        return tid != null &&
               exists(/databases/$(database)/documents/tournaments/$(tid)) &&
               get(/databases/$(database)/documents/tournaments/$(tid)).data.openPublicEdits == true;
      }

      // Allow updates if user is authenticated and rostered OR the tournament allows public edits.
      allow update: if (request.auth != null && isRosteredPlayer()) || isTournamentOpen();
      allow create, delete: if false;
    }
  }
}
